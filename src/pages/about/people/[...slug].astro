---
import Layout from '../../../layouts/Layout.astro';
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import { fetchStaffPages, fetchStoryByPath } from "../../../lib/storyblok-fetch";

export async function getStaticPaths() {
  const allPeople = await fetchStaffPages();

  return allPeople.map((person: any) => {
    return {
      params: {
        slug: person.slug,
      },
    };
  });
}

const { slug } = Astro.params;

const person = await fetchStoryByPath(`main-site/about/people/${slug}`);
---

<Layout title={`${person.name}`} subheading={`${person.content.title ? person.content.title : ''}`}>
  <StoryblokComponent name={person.name} blok={person.content} />
</Layout>
