---
import Layout from '../../../layouts/Layout.astro';
import { useStoryblokApi } from "@storyblok/astro";
import { richTextResolver } from '@storyblok/richtext'
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
 
const { render } = richTextResolver()

export async function getStaticPaths() {
  const storyblokApi = useStoryblokApi()
  const allStaff = [];

  let page = 1;
  const perPage = 100;

  while (true) {
    const { data } = await storyblokApi.get('cdn/stories', {
      version: String(import.meta.env.STORYBLOK_IS_PREVIEW) == 'true' ? 'draft' : 'published',
      starts_with: 'main-site/about/people',
      content_type: 'staff-page',
      per_page: perPage,
      page: page,
    })
    let staff = data.stories
    staff = Object.values(staff)

    if (staff.length === 0) {
      break; // Exit the loop if no stories are returned (i.e., last page)
    }

    allStaff.push(...staff);
    page++;
  }

  return allStaff.map((staff: any) => {
    return {
      params: {
        slug: staff.slug,
      },
    }
  })
}

const { slug } = Astro.params

const storyblokApi = useStoryblokApi()
 
const { data } = await storyblokApi.get(
  `cdn/stories/main-site/about/people/${slug}`,
  {
    version: String(import.meta.env.STORYBLOK_IS_PREVIEW) == 'true' ? 'draft' : 'published',
  }
)
 
const staff = (data as any).story
---

<Layout title={`${staff.name}`} subheading={`${staff.content.title ? staff.content.title : ''}`}>
  <section class="section-sm">
    <div class="container">
    </div>
  </section>
</Layout>
