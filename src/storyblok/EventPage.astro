---
import { storyblokEditable } from '@storyblok/astro';
import RelatedEvents from '../components/Event/Related.astro';
import RichText from './RichText.astro';
const { blok } = Astro.props;
---

<article {...storyblokEditable(blok)} class="section-sm">
  <div class="row align-items-center mb-5">
    <div class="col-lg-9 mb-sm-4 mb-lg-0">
      <div class="row">
        <div class="col-lg-3 col-md-6 mb-2 mb-lg-0">
          <div class="d-flex align-items-center">
            <i class="fas fa-map-pin text-muted icon-md me-3"></i>
            <div class="text-left">
              <h3 class="h6 mb-0">
                Location
              </h3>
              <p class="mb-0">
                {blok.location}
              </p>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-2 mb-lg-0">
          <div class="d-flex align-items-center">
            <i class="fa fa-calendar-alt text-muted icon-md me-3"></i>
            <div class="text-left">
              <h3 class="h6 mb-0">
                Date
              </h3>
              <p class="mb-0">
                {new Date(`${blok.eventDate}Z`).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric'})}
              </p>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-2 mb-lg-0">
          <div class="d-flex align-items-center">
            <i class="fas fa-clock text-muted icon-md me-3"></i>
            <div class="text-left">
              <h3 class="h6 mb-0">
                Time
              </h3>
              <p class="mb-0">
                {new Date(`${blok.eventDate}Z`).toLocaleTimeString('en-US', { hour: "2-digit", minute: "2-digit", timeZoneName: "short", timeZone: 'America/New_York'})}
              </p>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-2 mb-lg-0">
          <div class="d-flex align-items-center">
            <i class="fas fa-wallet text-muted icon-md me-3"></i>
            <div class="text-left">
              <h3 class="h6 mb-0">
                Cost
              </h3>
              <p class="mb-0">
                {blok.fee}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    {new Date(blok.eventDate) >= new Date() && blok.registrationLink.url &&
      <div class="col-lg-3 text-lg-right text-left">
        <a href={blok.registrationLink.url} class="btn btn-primary">Register</a>
      </div>
    }

    <div class="col-12 mt-4 order-4">
      <div class="border-bottom border-primary"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 content">
      {new Date(blok.eventDate) < new Date() &&
        <div class="alert alert-warning">
          <div class="h4 font-secondary">
            <i class="fas fa-history me-2"></i>Past event
          </div>
          This event has already taken place.
        </div>
      }
      {blok.body && (
        <RichText blok={{ body: blok.body }} />
      )}
    </div>

    <div class="col-12 mt-5">
      {blok.tags &&
        <ul class="d-flex flex-wrap p-0 h4">
          {blok.tags.map((tag: string) => (
            <li>
              <span class="badge rounded-pill bg-light text-secondary mb-1 tag-list">
                {tag}
              </span>
            </li>
          ))}
        </ul>
      }
    </div>
  </div>
</article>

<RelatedEvents />
